/* Slider */

.slick-slider {
    position: relative;
    display: block;
    padding: 0;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -ms-touch-action: pan-y;
    touch-action: pan-y;
    -webkit-tap-highlight-color: transparent;

    @include at-query ($min, $small) {
        padding: 0 $gutter;
    }
}
.slick-list {
    position: relative;
    overflow: hidden;
    display: block;
    margin: 0;
    padding: 0;

    &:focus {
        outline: none;
    }

    &.dragging {
        cursor: pointer;
        cursor: hand;
    }
}
.slick-slider .slick-track,
.slick-slider .slick-list {
    -webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
    -ms-transform: translate3d(0, 0, 0);
    -o-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
}

.slick-track {
    position: relative;
    left: 0;
    top: 0;
    display: block;

    &:before,
    &:after {
        content: "";
        display: table;
    }

    &:after {
        clear: both;
    }

    .slick-loading & {
        visibility: hidden;
    }
}
.slick-slide {
    float: left;
    height: 100%;
    min-height: 1px;
    [dir="rtl"] & {
        float: right;
    }
    img {
        display: block;
        margin: 0 auto;
    }
    &.slick-loading img {
        display: none;
    }

    display: none;

    &.dragging img {
        pointer-events: none;
    }

    .slick-initialized & {
        display: block;
    }

    .slick-loading & {
        visibility: hidden;
    }

    .slick-vertical & {
        display: block;
        height: auto;
        border: 1px solid transparent;
    }
}
.slick-arrow.slick-hidden {
    display: none;
}

/* Arrows */

.slick-prev,
.slick-next {
    display: none!important;

    @include at-query ($min, $small) {
        display: block!important;
        position: absolute;
        z-index: 1;
        height: 20px;
        width: 20px;
        line-height: 0px;
        font-size: 0px;
        cursor: pointer;
        background: transparent;
        color: transparent;
        top: 50%;
        margin-top: -10px\9; /*lte IE 8*/
        -webkit-transform: translate(0, -50%);
        -ms-transform: translate(0, -50%);
        transform: translate(0, -50%);
        padding: 0;
        border: none;
        outline: none;
        &:hover, &:focus {
            outline: none;
            background: transparent;
            color: transparent;
            &:before {
                color: darken($tragicLight, 15%);
            }
        }
        &.slick-disabled:before {
            //opacity: $slick-opacity-not-active;
        }
    }
}

.slick-prev:before, .slick-next:before {
    font-family: $socialIconFontStack;
    font-size: 20px;
    line-height: 1;
    color: $tragicLight;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-transition-duration: $transitionTime;
    transition-duration: $transitionTime;
    -webkit-transition-property: color, background-color;
    transition-property: color, background-color;
}

.slick-prev {
    left: 0;
    [dir="rtl"] & {
        left: auto;
        right: 0;
    }
    &:before {
        content: "\e902";
        [dir="rtl"] & {
            content: "\e901";
        }
    }
}

.slick-next {
    right: 0;
    [dir="rtl"] & {
        left: 0;
        right: auto;
    }
    &:before {
        content: "\e901";
        [dir="rtl"] & {
            content: "\e902";
        }
    }
}

/* Dots */

.slick-slider {
    margin-bottom: $gutter * 1.5;
}

.slick-dots {
    position: absolute;
    bottom: -($gutter * 1.5);
    list-style: none;
    display: block;
    text-align: center;
    padding: 0;
    margin: 0;
    width: 100%;
    li {
        position: relative;
        display: inline-block;
        height: $gutter / 2;
        width: $gutter / 2;
        margin: 0 5px;
        padding: 0;
        cursor: pointer;
        button {
            border: 0;
            background-color: $tragicLight;
            border-radius: $gutter;
            display: block;
            height: $gutter / 2;
            width: $gutter / 2;
            outline: none;
            line-height: 0px;
            font-size: 0px;
            color: transparent;
            padding: 5px;
            cursor: pointer;
            -webkit-transition-duration: $transitionTime;
            transition-duration: $transitionTime;
            -webkit-transition-property: color, background-color;
            transition-property: color, background-color;

            &:hover,
            &:focus {
                outline: none;
                background-color: darken($tragicLight, 15%);
            }
        }
        &.slick-active button {
            background-color: $tragicDark;
        }
    }
}
