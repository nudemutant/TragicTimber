/*============================================================================
  #Breadcrumbs
==============================================================================*/
.breadcrumb {
  margin: (($gutter / 2)-$gridBorder) 0 ($gutter / 2);
  text-align: center;
  font-size: em(10px);
  text-transform: uppercase;
  font-family: $headerFontStack;
  font-weight: $bold;
  letter-spacing: $siteKerning;

  @include at-query ($min, $xxlarge) {
    //margin: (($gutter)-$gridBorder) 0 $gutter;
  }

  a,
  span {
    display: inline-block;
    padding: 0 0 0 ($gutter /4 );
    color: $tragicLight;
  }

  a {
    &:first-child {
      padding-left: 0;
    }
  }

  span {
    &:last-child {
      color: $tragicDark;
    }
  }
}