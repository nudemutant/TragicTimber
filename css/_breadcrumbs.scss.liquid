/*============================================================================
  #Breadcrumbs
==============================================================================*/
.breadcrumb {
  margin: ($gutter / 2) 0;
  text-align: center;
  font-size: em(10px);
  text-transform: uppercase;
  font-family: $headerFontStack;
  font-weight: $bold;
  letter-spacing: $siteKerning;

  a,
  span {
    display: inline-block;
    padding: 0 0 0 ($gutter /4 );
    color: $tragicLight;
  }

  span {
    &:last-child {
      color: $tragicDark;
      padding-right: 0;
    }
  }
}