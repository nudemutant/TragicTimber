/*============================================================================
  #Site Header
==============================================================================*/
.site-header {
  padding: 0 $gutter;

  .grid--table {
    display: table;
    table-layout: fixed;
    width: 100%;

    > .grid__item {
      float: none;
      display: table-cell;
      vertical-align: middle;
    }
  }

  @include at-query ($min, $xxlarge) {
    padding: 0 ($gutter * 1.5);
  }
}

.site-header__logo {
  text-align: center;
  margin: 0 auto;
  max-width: $logoMaxWidth;

  @include at-query ($min, $large) {
    text-align: left;
  }

  a,
  a:hover,
  a:focus {
    text-decoration: none;
  }

  a, img {
    display: block;
  }

  img {
    margin: 0 auto;
  }
}

.site-header__logo-link {
  padding-top: 33.98%;  /* 175px/515px = 0.3398 */
  background-image: url({{ 'tragicsunshine-banner-small.png' | asset_url }});;
  background-size: cover;
  -moz-background-size: cover;  /* Firefox 3.6 */
  background-position: center;  /* Internet Explorer 7/8 */

  @include at-query ($min, $postSmall) {
    padding-top: 14.4%;  /* 176px/1222px = 0.1440 */
    background-image: url({{ 'tragicsunshine-banner.png' | asset_url }});;
  }
}

.site-header__cart-toggle {
  display: inline-block;
}

.site-header__search {
  display: inline-block;
  max-width: 400px;
  margin-top: $gutter / 2;
  width: 100%;
}

.search-bar {
  max-width: 100%;

  @include at-query ($max, $medium) {
    margin-left: auto;
    margin-right: auto;
  }
}