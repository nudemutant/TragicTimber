.payment-icons {
  @include user-select(none);
  cursor: default;

  li {
    margin: 0 ($gutter / 4) ($gutter / 4);
    color: {{ settings.color_footer_social_link }};
    cursor: default;
  }

  .icon {
    font-size: 30px;
    line-height: 30px;
  }

  .fallback-text {
    text-transform: capitalize;
  }
}

.social-icons {
  margin-top: $gutter / 2;

  li {
  margin: 0 ($gutter / 6) ($gutter / 2) 0;
  vertical-align: middle;

    &:last-child {
      margin-right: 0;

      @include at-query ($min, $large) {
        a {
          padding-right: 0;
        }
      }
    }

    .icon {
      font-size: em(20px);
      line-height: 26px;
    }

    a {
      padding: ($gutter / 2) ($gutter / 4);
    }
  }

  @include at-query ($min, $large) {
    margin-top: 0;
    margin-bottom: $gutter / 6;

    li {
      &:last-child {
        a {
          padding-right: 0;
        }
      }

      a {
        padding: ($gutter / 2) ($gutter / 6);
        color: $tragicDark;

        &:hover {
          color: darken($tragicDark, 10%);
        }
      }
    }
  }
}