/*============================================================================
  #Product Thumbnail
  http://tympanus.net/codrops/2014/06/19/ideas-for-subtle-hover-effects/
==============================================================================*/
.product-thumbnail__wrap {}

.product-thumbnail {
    position: relative;
    overflow: hidden;
    margin: 0;
    cursor: pointer;

    img {
        width: 100%;
        display: block;
        opacity: 1;
        -webkit-transition: opacity $transitionTime, -webkit-transform $transitionTime;
        transition: opacity $transitionTime, transform $transitionTime;
        -webkit-transform: scale(1);
        transform: scale(1);
    }

    a {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 4;
        text-indent: 200%;
        white-space: nowrap;
        font-size: 0;
        opacity: 0;
    }

    &:hover {
        background-color: $tragicDark;

        img {
            opacity: 0.4;
            -webkit-transform: scale(1.5);
            transform: scale(1.5);
        }

        .project-title {
            opacity: 1;
            -webkit-transform: scale(1);
            transform: scale(1);
        }
    }
}

.project-title__wrap {
    color: #fff;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.project-title {
    position: absolute;
    top: 40%;
    width: 100%;
    text-align: center;
    opacity: 0;
    -webkit-transition: opacity $transitionTime, -webkit-transform $transitionTime;
    transition: opacity $transitionTime, transform $transitionTime;
    -webkit-transform: scale(1.5);
    transform: scale(1.5);

    h2 {
        font-size: em(18px); //need a variable!
    }

    h3 {
        color: $yellowSunshine;
        font-size: em(15px); //need a variable!
    }
}