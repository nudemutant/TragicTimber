figure.product-thumbnail__hover img {
    -webkit-transition: opacity 0.35s, -webkit-transform 0.35s;
    transition: opacity 0.35s, transform 0.35s;
    -webkit-transform: scale(1);
    transform: scale(1);
}

figure.product-thumbnail__hover:hover img {
    opacity: 0.5;
    -webkit-transform: scale(1.5);
    transform: scale(1.5);
}

figure.product-thumbnail__hover .project-title {
    opacity: 0;
    -webkit-transition: opacity 0.35s, -webkit-transform 0.35s;
    transition: opacity 0.35s, transform 0.35s;
}

figure.product-thumbnail__hover .project-title {
    -webkit-transform: scale(1.5);
    transform: scale(1.5);
}

figure.product-thumbnail__hover:hover .project-title {
    opacity: 1;
    -webkit-transform: scale(1);
    transform: scale(1);
}