/*============================================================================
  #Product Page
==============================================================================*/
.product-type {
  font-size: em(14px);
  text-transform: uppercase;
  font-weight: $bold;
  margin: $gutter 0 ($gutter / 2);
}

.product-title {
  color: $orangeSunshine;
  margin-bottom: $gutter;
  border-bottom: 2px solid $orangeSunshine;
}

.product-description {
  padding-bottom: $gutter / 2;

  @include at-query ($max, $medium) {
    max-width: $siteWidth / 3;
  }
}

.product-single__variants {
  display: none;

  .no-js & {
    display: block;
  }
}

.product-single__photos {
}

.product-single__photos,
.product-single__thumbnails {
  a, img {
    display: block;
    margin: 0 auto;
  }

  li {
    margin-bottom: $gutter;
  }
}