/*============================================================================
  #Tumblr
==============================================================================*/
.tubmlr-card__info {
    font-size: em(13px);
    font-family: $headerFontStack;
    background-color: $tragicDark;
    color: $yellowSunshine;
    padding: $gutter / 2;
    word-wrap: break-word;
    -webkit-transition-duration: $transitionTime;
    transition-duration: $transitionTime;
    -webkit-transition-property: color, background-color;
    transition-property: color, background-color;

    p {
        &:last-child {
            margin-bottom: 0;
        }
    }
}

.tumblr-card {
    &:hover,
    &:focus {
        .tubmlr-card__info {
            color: #ffffff;
            background-color: darken($tragicDark, 15%);
        }
    }

    .project-title {
        h2 {
            font-size: em(15px);
        }
    }

    .icon {
        font-size: em(20px);
    }
}

.photoset {
    list-style: none;
    margin: 0;

    li {
        margin: 0;
    }
}

.older-posts {
    opacity: 0;
    text-align: center;
    margin-top: $gutter * 2;
}