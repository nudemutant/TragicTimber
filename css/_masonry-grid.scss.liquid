/*============================================================================
  #Masonry Grid
==============================================================================*/
$gridBorder: 4px;

.masonry-grid__wrap {
    padding-right: $gridBorder;
    margin-top: $gridBorder;
}

.masonry-grid__item {
    float: left;
    padding-left: $gridBorder;
    margin-bottom: $gridBorder;
    width: 100%;
    opacity: 0;

    @include at-query ($min, 500px) {
        width: 50%;
    }

    @include at-query ($min, 750px) {
        width: 33.333%;
    }

    @include at-query ($min, 1000px) {
        width: 25%;
    }

    @include at-query ($min, 1250px) {
        width: 20%;
    }

    @include at-query ($min, 1500px) {
        width: 16.666%;
    }

    @include at-query ($min, 2000px) {
        width: 14.286%;
    }

    @include at-query ($min, 2250px) {
        width: 12.5%;
    }

    @include at-query ($min, 2500px) {
        width: 11.111%;
    }

    @include at-query ($min, 2750px) {
        width: 10%;
    }

    @include at-query ($min, 3000px) {
        width: 9.091%%;
    }

    @include at-query ($min, 3250px) {
        width: 8.333%;
    }
}